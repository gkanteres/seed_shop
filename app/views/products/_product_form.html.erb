<%= form_for [@category, @product] do |f| %>
  <%= f.hidden_field :category_id, value: @category.id %>

<div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>
<div class="form-group">
  <%= f.label :latin_name %>
  <%= f.text_field :latin_name %>
</div>
<div class="form-group">
  <%= f.label :description %>
  <%= f.text_field :description %>
</div>
<div class="form-group">
  <%= f.label :tag %>
  <%= f.text_field :tag %>
</div>
<div class="form-group">
  <%= f.label :price %>
  <br />
  <%= f.text_field :price %>
</div>
<div>
  <%= f.label :image %>
  <%= f.text_field :image %>
</div>
  <%= f.submit "Enter" %>
<% end %>
