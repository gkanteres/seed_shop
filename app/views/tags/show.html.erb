<h1><%= @tag.name %></h1>

<div class="container">
<h3>Products tagged with <%= @tag.name %>:</h3>
<% if @products.any? %>
  <% @products.each do |product| %>
  <!-- h4 below should be <= link_to ~> category_product_path(@category, product) > -->
    <h4><%= product.name %></h4>
  <% end %>
<% end %>
<br /><br />
</div>

<div class="container">
  <%= link_to 'All Tags', tags_path %>
</div>


<% if admin_signed_in? %>
<div class="container">
<%= link_to 'Edit', edit_tag_path(@tag) %> |
<%= link_to(tag_path(@tag),
    data: {
      confirm: 'Delete tag?',
      method: 'delete'}) do %>
      Delete
    <% end %>
<% end %>
</div>
