<h2>New Product</h2>

<%= form_for [@store, @product] do |f| %>
  <%= f.hidden_field :store_id, value: store.id %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :name %>

  <%= f.label :description %>

  <%= f.label :price %>

  <%= f.label :image %>
  <%= f.submit "Add product" %>
<% end %>
