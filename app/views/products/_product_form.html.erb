<h2>Add New Product</h2>

<%= form_for [@category, @product] do |f| %>
  <%= f.hidden_field :category_id, value: @category.id %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :price %>
  <%= f.text_field :price %>

  <%= f.label :image %>
  <%= f.text_field :image %>

  <%= f.submit "Enter" %>
<% end %>
